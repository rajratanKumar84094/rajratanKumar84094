#SIMPLE CALCULATOR CODE

First= input( "enter the first number:")

operator= input("enter operator(+,-,*,/):")

Second= input( "enter the second number:")

if operator=="+":
   print(int(First)+int(Second))

elif operator=="-" :
     print(int(First)-int(Second))

elif operator=="*":
     print(int(First)*int(Second))



elif operator=="/":
     print(int(First)/int(Second))



else:
    print("invalid operation")
